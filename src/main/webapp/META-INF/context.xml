<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/Siso">
  
  <!-- Postgres -->
    <Resource auth="Container"
    driverClassName="org.postgresql.Driver"
    maxActive="2"
    maxIdle="1"
    maxWait="-1"
    name="jdbc/datasource"
    password="postgres"
    type="javax.sql.DataSource"
    url="jdbc:postgresql://localhost:5432/siso"
    username="postgres"/>
</Context>
